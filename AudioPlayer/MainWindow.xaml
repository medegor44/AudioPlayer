<Window x:Class="AudioPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AudioPlayer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="0,0,0,-4" Height="423" VerticalAlignment="Top">
        <TextBox HorizontalAlignment="Left" x:Name="playlist" Height="349" Margin="10,41,0,0" VerticalAlignment="Top" Width="100"/>
        <Label Content="Playlist"  HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="100"/>
        <Button Content="Play" HorizontalAlignment="Left" Margin="115,41,0,0" VerticalAlignment="Top" Width="75" Click="PlayClicked"/>
        <Button Content="Pause" HorizontalAlignment="Left" Margin="115,66,0,0" VerticalAlignment="Top" Width="75" Click="PauseClicked"/>
        <Button Content="Stop" HorizontalAlignment="Left" Margin="115,91,0,0" VerticalAlignment="Top" Width="76" Click="StopClicked"/>
        <Button Content="Load playlist" HorizontalAlignment="Left" Margin="115,141,0,0" VerticalAlignment="Top" Width="75" Click="LoadClicked"/>
        <Button Content="Next" HorizontalAlignment="Left" Margin="115,116,0,0" VerticalAlignment="Top" Width="75" Click="NextClicked"/>
    </Grid>
</Window>
